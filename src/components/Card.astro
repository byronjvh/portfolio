---
import ButtonLink from "./ButtonLink.astro";
import GitHub from "./icons/GitHub.astro";
import RightArrow from "./icons/RightArrow.astro";
import Web from "./icons/Web.astro";

const {
    img = "",
    title = "TaskFlow App",
    description = "",
    tags = [
        ["ReactJS", "blue"],
        ["Tailwind", "Sky"],
    ],
    withicon = false,
    code = "",
    project = "",
    className = "",
} = Astro.props;
---

<div class={`project-card card flex gap-4 ${className}`}>
    <slot />

    <div class=`flex flex-col gap-2 text`>
        <h4 class="font-bold text-xl">{title}</h4>
        {description ? <p class="">{description}</p> : ""}

        <div class="mt-1 flex gap-1">
            {
                tags?.map((tag: string) => (
                    <span class={`tag ${tag[1]}`}>{tag[0]}</span>
                ))
            }
        </div>
    </div>

    {
        img && (
            <ButtonLink url="" className="button-4 text-sm flex-1 py-1 px-6">
                <GitHub size="18" /> Ver GitHub
            </ButtonLink>
        )
    }
</div>
