---
const { title, date, keys = [], description, url, year } = Astro.props;
---

<article class="">
    <div class="flex gap-1 items-center">
        <h3>{title}</h3>
        {year && <p class="italic">{year}</p>}
    </div>
    {description && <p>{description}</p>}
    {date && <p class="italic">{date}</p>}
    {
        url && (
            <a
                class="text-blue-700 underline"
                href={url}
                target="_blank"
                rel="noopener noreferer"
            >
                GitHub
            </a>
        )
    }
    <ul class="list-disc min-h-[1rem] mt-2 pl-8 text-sm text-balance">
        {keys.map((key: string) => <li>{key}</li>)}
    </ul>
</article>
