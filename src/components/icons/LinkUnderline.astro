---
const { className, size = "m" } = Astro.props;
---

{
    size === "m" ? (
        <svg
            class={className}
            width="90"
            height="10"
            viewBox="0 0 90 10"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                d="M0.999998 9L81 9"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
            />
            <path
                d="M81 9.00001L88.5 1.5M88.5 1.5V9.00001M88.5 1.5H81"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
            />
        </svg>
    ) : size === "lg" ? (
        <svg
            class={className}
            width="100"
            height="10"
            viewBox="0 0 100 10"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                d="M1 9L91 9"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
                stroke-linejoin="round"
            />
            <path
                d="M91 9.00001L98.5 1.5M98.5 1.5V9.00001M98.5 1.5H91"
                stroke="currentColor"
                stroke-width="1.5"
                stroke-linecap="round"
            />
        </svg>
    ) : (
        ""
    )
}
